<div class="container pt-4">
    <table class="table">
        <tr>
            <th>Nombre</th>
            <th>Precio</th>
            <th>Imagen</th>
        </tr>
    {{#each productos}}
        <tr>
            <td><p class="card-text">{{this.nombre}}</p></td>
            <td><p class="card-text">{{this.price}}</p></td>
            <td><div class="card" style="width: 18rem;">
            <img src={{this.image}} class="card-img-top"></td>
        </div>
        </tr>
        {{/each}}
        <br>
    </table>
</div>